<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="jmehnat">
        <createTable tableName="JMEHNAT_DEGREE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_DEGREE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="jmehnat">
        <createTable tableName="JMEHNAT_POSITION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_POSITION"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="jmehnat">
        <createTable tableName="JMEHNAT_REGION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_REGION"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="jmehnat">
        <createTable tableName="JMEHNAT_VACANCY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_VACANCY"/>
            </column>
            <column name="REGION_ID" type="UUID"/>
            <column name="POSITION_ID" type="UUID"/>
            <column name="DEGREE_ID" type="UUID"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="jmehnat">
        <addForeignKeyConstraint baseColumnNames="DEGREE_ID" baseTableName="JMEHNAT_VACANCY"
                                 constraintName="FK_JMEHNAT_VACANCY_ON_DEGREE" referencedColumnNames="ID"
                                 referencedTableName="JMEHNAT_DEGREE"/>

        <createIndex indexName="IDX_VACANCY_DEGREE_ID" tableName="JMEHNAT_VACANCY">
            <column name="DEGREE_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="6" author="jmehnat">
        <addForeignKeyConstraint baseColumnNames="POSITION_ID" baseTableName="JMEHNAT_VACANCY"
                                 constraintName="FK_JMEHNAT_VACANCY_ON_POSITION" referencedColumnNames="ID"
                                 referencedTableName="JMEHNAT_POSITION"/>

        <createIndex indexName="IDX_VACANCY_POSITION_ID" tableName="JMEHNAT_VACANCY">
            <column name="POSITION_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="7" author="jmehnat">
        <addForeignKeyConstraint baseColumnNames="REGION_ID" baseTableName="JMEHNAT_VACANCY"
                                 constraintName="FK_JMEHNAT_VACANCY_ON_REGION" referencedColumnNames="ID"
                                 referencedTableName="JMEHNAT_REGION"/>

        <createIndex indexName="IDX_VACANCY_REGION_ID" tableName="JMEHNAT_VACANCY">
            <column name="REGION_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
