<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="jmehnat">
        <createTable tableName="JMEHNAT_DOWNLOAD">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_DOWNLOAD"/>
            </column>
            <column name="URL" type="VARCHAR(255)"/>
            <column name="PROVINCE_ID" type="UUID"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="jmehnat">
        <createTable tableName="JMEHNAT_PROVINCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_JMEHNAT_PROVINCE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="jmehnat">
        <addColumn tableName="JMEHNAT_REGION">
            <column name="PROVINCE_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="PROVINCE_ID" tableName="JMEHNAT_REGION"/>
    </changeSet>
    <changeSet id="4" author="jmehnat">
        <addForeignKeyConstraint baseColumnNames="PROVINCE_ID" baseTableName="JMEHNAT_DOWNLOAD"
                                 constraintName="FK_JMEHNATDOWNLOAD_ON_PROVINCE" referencedColumnNames="ID"
                                 referencedTableName="JMEHNAT_PROVINCE"/>

        <createIndex indexName="IDX_DOWNLOAD_PROVINCE_ID" tableName="JMEHNAT_DOWNLOAD">
            <column name="PROVINCE_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="5" author="jmehnat">
        <addForeignKeyConstraint baseColumnNames="PROVINCE_ID" baseTableName="JMEHNAT_REGION"
                                 constraintName="FK_JMEHNAT_REGION_ON_PROVINCE" referencedColumnNames="ID"
                                 referencedTableName="JMEHNAT_PROVINCE"/>
    </changeSet>
</databaseChangeLog>
